<h1>Ateliers de la catégorie</h1>

<?php if (empty($list)): ?>
    <p>Aucun atelier pour cette catégorie.</p>
<?php else: ?>
<table class="table">
    <thead><tr><th>#</th><th>Nom</th><th>Description</th></tr></thead>
    <tbody>
    <?php foreach ($list as $w): ?>
        <tr>
            <td><?= htmlspecialchars($w['id_workshop']) ?></td>
            <td><?= htmlspecialchars($w['title'] ?? $w['name']) ?></td>
            <td><?= htmlspecialchars($w['description'] ?? '') ?></td>
        </tr>
    <?php endforeach; ?>
    </tbody>
</table>
<?php endif; ?>